<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.developbox.desenhosabe.CalculoResistencia3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/resi3ResultTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/resi3R1EditText"
        android:layout_marginTop="31dp"
        android:hint="R1"
        android:layout_below="@+id/resi3ResultTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/resi3R2EditText"
        android:hint="R2"
        android:layout_below="@+id/resi3R1EditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/resi3R1EditText"
        android:layout_alignEnd="@+id/resi3R1EditText" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/resi3R3EditText"
        android:hint="R3"
        android:layout_below="@+id/resi3R2EditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/resi3R2EditText"
        android:layout_alignEnd="@+id/resi3R2EditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:id="@+id/resi3CalculateButton"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/resi3R2EditText"
        android:layout_alignRight="@+id/resi3R2EditText"
        android:layout_alignEnd="@+id/resi3R2EditText"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1/Re = (1/R1) + (1/R2) + (1/R3)"
        android:id="@+id/resi3FormulatextView"
        android:layout_below="@+id/resi3CalculateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
