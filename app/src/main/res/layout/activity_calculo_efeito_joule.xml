<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.developbox.desenhosabe.CalculoEfeitoJoule">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/efeitoJouleResultTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/efeitoJouleREditText"
        android:layout_marginTop="31dp"
        android:hint="R"
        android:layout_below="@+id/efeitoJouleResultTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/efeitoJouleiEditText"
        android:hint="i"
        android:layout_below="@+id/efeitoJouleREditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/efeitoJouleREditText"
        android:layout_alignEnd="@+id/efeitoJouleREditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:id="@+id/efeitoJouleCalculateButton"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/efeitoJouleiEditText"
        android:layout_alignRight="@+id/efeitoJouleiEditText"
        android:layout_alignEnd="@+id/efeitoJouleiEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="P = R * iÂ²"
        android:id="@+id/efeitoJouleFormulatextView"
        android:layout_below="@+id/efeitoJouleCalculateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>
